                            <i data-lucide="columns" class="h-4 w-4"></i> Modern
                        </button>
                        <button onclick="setLayout('classic')" id="btn-classic" class="flex items-center gap-1 px-3 py-1.5 rounded-md text-sm font-medium transition-colors text-gray-600 hover:text-gray-900">
                            <i data-lucide="align-justify" class="h-4 w-4"></i> Classic
                        </button>
                    </div>

                    <!-- Color Pickers -->
                    <div class="hidden md:flex gap-2 mr-4" id="color-picker-container">
                        <!-- Colors injected by JS -->
                    </div>

                    <button onclick="window.print()" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        <i data-lucide="download" class="h-4 w-4 mr-2"></i>
                        Download PDF
                    </button>
                </div>
            </div>
        </div>
