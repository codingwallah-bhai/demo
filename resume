    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 py-8 sm:px-6 lg:px-8">
        
        <!-- Mobile Tab Toggle -->
        <div id="tab-buttons" class="md:hidden mb-4 flex rounded-lg bg-white p-1 shadow-sm print:hidden">
            <button onclick="switchTab('editor')" id="tab-editor" class="flex-1 py-2 text-sm font-medium rounded-md bg-blue-100 text-blue-700">Editor</button>
            <button onclick="switchTab('preview')" id="tab-preview" class="flex-1 py-2 text-sm font-medium rounded-md text-gray-500">Preview</button>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
            
            <!-- EDITOR SECTION -->
            <div id="editor-section" class="lg:col-span-5 space-y-6 print:hidden">
                
                <!-- Personal Info -->
                <div class="bg-white shadow rounded-lg p-6">
                    <h2 class="text-lg font-medium text-gray-900 mb-4 flex items-center gap-2">
                        <i data-lucide="user" class="h-5 w-5 text-gray-500"></i> Personal Details
                    </h2>
                    
                    <!-- Image Upload -->
                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-700 mb-1">Profile Picture</label>
                        <div class="flex items-center gap-4">
                            <div id="image-preview-mini" class="h-12 w-12 rounded-full bg-gray-200 flex items-center justify-center overflow-hidden border border-gray-300">
                                <i data-lucide="image" class="h-6 w-6 text-gray-400"></i>
                            </div>
                            <input type="file" accept="image/*" onchange="handleImageUpload(this)" class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100"/>
                        </div>
                    </div>

                    <div class="grid grid-cols-1 gap-4" id="personal-form">
                        <!-- Inputs injected by JS to match state -->
                    </div>
                </div>

                <!-- Experience -->
                <div class="bg-white shadow rounded-lg p-6">
                    <div class="flex justify-between items-center mb-4">
                        <h2 class="text-lg font-medium text-gray-900 flex items-center gap-2">
                            <i data-lucide="briefcase" class="h-5 w-5 text-gray-500"></i> Experience
                        </h2>
                        <button onclick="addExperience()" class="inline-flex items-center p-1.5 border border-transparent rounded-full shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none">
                            <i data-lucide="plus" class="h-4 w-4"></i>
                        </button>
                    </div>
                    <div id="experience-list" class="space-y-6">
                        <!-- Experience items injected here -->
                    </div>
                </div>

                <!-- Education -->
                <div class="bg-white shadow rounded-lg p-6">
                    <div class="flex justify-between items-center mb-4">
                        <h2 class="text-lg font-medium text-gray-900 flex items-center gap-2">
                            <i data-lucide="graduation-cap" class="h-5 w-5 text-gray-500"></i> Education
                        </h2>
                        <button onclick="addEducation()" class="inline-flex items-center p-1.5 border border-transparent rounded-full shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none">
                            <i data-lucide="plus" class="h-4 w-4"></i>
                        </button>
                    </div>
                    <div id="education-list" class="space-y-6">
                        <!-- Education items injected here -->
                    </div>
                </div>

                <!-- Skills -->
                <div class="bg-white shadow rounded-lg p-6">
                    <h2 class="text-lg font-medium text-gray-900 mb-4 flex items-center gap-2">
                        <i data-lucide="palette" class="h-5 w-5 text-gray-500"></i> Skills
                    </h2>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">List your skills (comma separated)</label>
                        <textarea id="skills-input" rows="3" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm p-2 border" oninput="handleSkillsChange(this.value)"></textarea>
                    </div>
                </div>
            </div>

            <!-- PREVIEW SECTION -->
            <div id="preview-section" class="lg:col-span-7 hidden lg:block">
                <div class="sticky top-24">
                    <div id="resume-preview-container" class="shadow-2xl print:shadow-none bg-white w-full mx-auto a4-ratio relative">
                        <!-- Resume Content Injected Here -->
                    </div>
                    <div class="text-center mt-4 text-sm text-gray-500 print:hidden">
                        <p>Preview uses A4 aspect ratio. Use "Download PDF" to save.</p>
                    </div>
                </div>
            </div>

